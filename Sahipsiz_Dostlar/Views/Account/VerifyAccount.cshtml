@{
    ViewBag.Title = "VerifyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hesap onaylama</h2>

<div class="login">
    <div class="container">
        <div class="contact-box">
            @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
            {
                <div>
                    <Strong>Onaylama işlemi Başarılı Giriş yapabilirsiniz</Strong>
                </div>
            }
            else
            {
                <div>
                    <Strong>Onaylama işlemi Başarısız Giriş yapabilirsiniz</Strong>
                </div>
            }
        </div>
    </div>
</div>