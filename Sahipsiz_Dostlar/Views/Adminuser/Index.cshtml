@model IEnumerable<Sahipsiz_Dostlar.Entity.Models.Kullanici>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı kayıtları</h2>

<p>
    <a class="btn btn-default" href="/Adminuser/Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped table-responsive text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KullaniciID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eposta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th> İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eposta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sifre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-success" href="/Adminuser/Edit/@item.KullaniciID"><i class="icon_pencil-edit"></i></a>
                    <a class="btn btn-primary" href="/Adminuser/Details/@item.KullaniciID"><i class="icon_plus_alt2"></i></a>
                    <a class="btn btn-danger" href="/Adminuser/Delete/@item.KullaniciID"><i class="icon_close_alt2"></i></a>
                </div>
            </td>
        </tr>
    }

</table>
